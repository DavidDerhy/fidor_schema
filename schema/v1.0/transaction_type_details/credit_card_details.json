{
  "$schema"     : "http://json-schema.org/draft-04/schema#",
  "type"        : "object",
  "title"       : "credit_card_details",
  "description" : "Credit card information available in a CreditCard transaction",
  "properties"  : {
    "cc_merchant_name" : {
      "description" : "CreditCard merchant initiating the transaction",
      "type"        : "string",
      "maxLength"   : 255,
      "readOnly"    : true
    },
    "cc_merchant_category" : {
      "description" : "Category given by the merchant",
      "type"        : "string",
      "maxLength"   : 255,
      "readOnly"    : true
    },
    "cc_type" : {
      "description" : "CreditCard type",
      "type"        : "string",
      "maxLength"   : 255,
      "readOnly"    : true
    },
    "cc_category" : {
      "description" : "CreditCard category",
      "type"        : "string",
      "maxLength"   : 255,
      "readOnly"    : true
    },
    "cc_sequence" : {
      "description" : "The CC sequence is the same for all related transactions",
      "type"        : "string",
      "maxLength"   : 255,
      "readOnly"    : true
    }
  }
}
